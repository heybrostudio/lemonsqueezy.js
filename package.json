{
  "name": "@heybrostudio/lemonsqueezy.js",
  "description": "This is the unofficial JavaScript SDK for Lemon Squeezy.",
  "version": "0.0.9",
  "author": "Caven <cavenasdev@gmail.com>",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "homepage": "https://github.com/heybrostudio/lemonsqueezy.js",
  "keywords": [
    "lemonsqueezy",
    "javascript",
    "typescript"
  ],
  "scripts": {
    "build": "unbuild",
    "test": "bun test",
    "coverage": "bun test --coverage",
    "up": "taze major -w",
    "format": "biome format . --write",
    "lint": "biome lint .",
    "lint:fix": "biome lint . --apply",
    "typecheck": "tsc --noEmit",
    "build:examples": "bun build ./examples --outdir ./examples/dist --minify",
    "release": "bun run typecheck && bun run format && bun run lint:fix && bun run build",
    "export-size": "export-size ."
  },
  "devDependencies": {
    "@biomejs/biome": "^1.5.3",
    "@commitlint/cli": "^18.6.0",
    "@commitlint/config-conventional": "^18.6.0",
    "@heybrostudio/biome-config": "^0.0.4",
    "@types/bun": "latest",
    "export-size": "^0.7.0",
    "lint-staged": "^15.2.0",
    "simple-git-hooks": "^2.9.0",
    "taze": "^0.13.1",
    "unbuild": "^2.0.0"
  },
  "peerDependencies": {
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18"
  },
  "simple-git-hooks": {
    "pre-commit": "bun run lint-staged",
    "commit-msg": "bun run commitlint --edit \"$1\""
  },
  "lint-staged": {
    "*": "biome lint . --apply"
  }
}
